<!DOCTYPE html>
<html>
<head>
	<title>canvas | resnwm | 2016</title>
	<% include partials/head %>
</head>
<body class="container">
	<main class="container">
		<img src="public/tmp/muruks.jpg" width="125px" height="auto" id="imageToLoad" class="img-responsive" alt="">
		<canvas id="image-editor" width="100%" height="100%"></canvas>
		<form action="/api/upload" method="post" accept-charset="utf-8">
			<input type="file" required />
			<button class="btn btn-default" type="submit">Upload</button>
		</form>
	</main>
	<footer>
		<% include partials/footer %>
	</footer>
</body>
<% include partials/scripts %>
<script>
	$(document).ready(function () {
		var h = $(window).height()/2 + 'px',
				w = $(window).width()/2 + 'px';
		var cid = document.getElementById('#image-editor');
		var x = cid.getContext('2d'),
				i = $('#imageToLoad');
		$('canvas').attr({
			'width': w,
			'height': h,
			'style': 'background:cadetblue'
		});
		x.drawImage(i,0,0,200,500);
	});
</script>
</html>